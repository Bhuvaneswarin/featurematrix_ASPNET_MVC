        background-color: rgb(20, 118, 210);
        color: #ffffff;
    }

    .close-btn {
        box-shadow: none;
    }

    .closebtn {
        top: 15px;
        line-height: 36px;
        height: 42px;
        color: black;
        position: absolute;
        right: 10px;
    }

    #listcontainer {
        width: 100%;
    }

    #list {
        margin: 0 auto;
        width: 30%;
    }

    .close-icon::before {
